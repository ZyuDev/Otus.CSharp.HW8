@page "/FindUser"

<div class="row">

    <div class="col-sm-6">

        <div class="form-group form-row">
            <label class="col-sm-2">User Id</label>
            <div class="col-sm-8">
                <input type="number" class="form-control form-control-sm" @bind="_userId" placeholder="User Id" />
            </div>
            <div class="col-sm-2">
                <button class="btn btn-sm btn-outline-primary" @onclick="OnGetUserClick">
                    @if (_isWaiting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    }
                    Get user
                </button>

            </div>

        </div>



    </div>

</div>

@if (_item != null)
{
    <div class="row">

        <div class="col-sm-6">

            <div class="card">

                <div class="card-header">User</div>
                <div class="card-body">

                    <div>@_item.Id</div>
                    <div>@_item.FullName</div>
                    <div>@_item.Email</div>
                    <div>@_item.Phone</div>

                </div>

            </div>

        </div>

    </div>
}

<BbAlertHub></BbAlertHub>
